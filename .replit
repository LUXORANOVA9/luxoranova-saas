[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[deployment]
run = ["sh", "-c", ".n8n/custom"]

[workflows]
runButton = "Run Dashboard"

[[workflows.workflow]]
name = "Run n8n"
author = 41766014
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node .n8n/custom/abascus_chatllm_node.js"

[[workflows.workflow]]
name = "Process Strategy"
